<%= content_for :right_split do %>
    <h4>Admins</h4>
	<% @org.admins.each do |admin| %>
    <div class="row-fluid">
        <div class="span1">
            <%= photo_link(admin.avatar, :thumb, user_url(admin)) %>
        </div>
        <div class="span7" style="padding-top:6px">
            <%= link_to(admin.name, user_url(admin)) %>
        </div>
		<div class="span4"><%= link_to 'Remove Admin', org_user_path(@org, admin), :method=>:delete, :class=>"btn btn-primary" %></div>
    </div>
	<div class="row-fluid">&nbsp;</div>
	<% end %>

    <h4>Add An Admin</h4>
    <%= form_for org_users_url(@org), :method=>:post do |f| %>
    <div class="row-fluid">
        <div class="span8">
          <%= text_field_tag :email, "", :placeholder => "E-Mail Address" %>
        </div>
        <div class="span4">
          <%= f.submit 'Add Admin', :class=>"btn btn-primary" %>
        </div>
    </div>
    <% end %>
<% end %>
<%= render :partial => 'users/shared/me', :locals => { :links => "orgs/org_profile_links" } %>