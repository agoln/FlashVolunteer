<%
    size ||= :large
    imgSize ||= "32x32"
%>
<div class="followus">
    <ul class="unstyled inline">
        <% 
            #Support multiple sizes (16,20,32), default is large
            case size
            when :small
                imgSize = "16x16"
            when :medium
                imgSize = "20x20"
            end
        %>
        <li><p>Follow Us:</p></li>
        <li>
            <a href="http://twitter.com/flashvolunteer">
                <%= image_tag("twitter_icon_#{imgSize}.png", 
                    :id => "twitter-badge-img",
                    :alt=>"Follow us on Twitter") %>
            </a> 
        </li>
        <li>
            <a href="http://www.facebook.com/pages/Flash-Volunteer/75272433226">
                <%= image_tag("facebook_icon_#{imgSize}.png", 
                    :id => "fb-badge-img",
                    :alt=>"Follow us on Facebook") %>
            </a>
        </li>
        <li>
            <a href="http://itunes.apple.com/us/app/flash-volunteer/id353017547">  
                <%= image_tag("mobile_icon_#{imgSize}.png", 
                    :id => "iphone-badge-img",
                    :alt=>"Get our iPhone application") %>
            </a>
        </li>
    </ul>
</div>