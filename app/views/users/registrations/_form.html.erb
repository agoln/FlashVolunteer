<%
    # f = form
%>
<div class="row">&nbsp;</div>
<div class="row-fluid">
    <div class="span2">
        <div class="pull-right"><%= f.label :name, "name"%></div>
    </div>
    <div class="span10">
        <%= f.text_field :name, :class=>"full", :id => "account_name"  %>
    </div>
</div>

<div class="row-fluid">
    <div class="span2">
        <div class="pull-right"><%= f.label :email, "email" %></div>
    </div>
    <div class="span10">
        <%= f.email_field :email, :class=>"full", :id=>"account_email" %>
    </div>
</div>

<div class="row-fluid">
    <div class="span2">
        <div class="pull-right"><%= f.label :password, "password" %></div>
    </div>
    <div class="span10">
        <%= f.password_field :password, :class=>"full" %>
    </div>
</div>

<div class="row-fluid">
    <div class="span2">
        <div class="pull-right" style="text-align:right"><%= f.label :password_confirmation, "confirm password" %></div>
    </div>
    <div class="span10">
        <%= f.password_field :password_confirmation, :class=>"full" %>
    </div>
</div>
<div class="row-fluid">
    <div class="span2">&nbsp;</div>
    <div class="span10">
        <div class="pull-left">
            <%= f.check_box(:terms_of_service) %>
        </div>
        <div style="padding-left: 20px">
            <label for="user_terms_of_service" style="float: none;">I accept the <%= link_to("Terms of Use", tou_url, :target => "_blank") %> and <%= link_to("Privacy Policy", privacy_url, :target => "_blank") %></label>
        </div>
    </div>
</div>
<div class="row">&nbsp;</div>
<div class="row-fluid">
    <button type="submit" id="sign_up" class="btn btn-primary pull-right" href="#"><%= button %></button>     
</div>