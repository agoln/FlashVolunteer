<% content_for :question do %>
    To sign up, give your name and email address.
<% end %>
<% content_for :below_question do %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:name=>"signinform"}) do |f| %>
        <div class="row-fluid">
            <div class="span1">
                <%= f.label :name %>
            </div>
            <div class="span11">
                <%= f.text_field :name  %>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span1">
                <%= f.label :email %>
            </div>
            <div class="span11">
                <%= f.email_field :email %>
            </div>
        </div>
        <%= f.hidden_field :signup_reason, :value => session[:signup_reason] %>
    <% end %>
<% end %>
<% content_for :button do %>
    <% link_to("#", :onclick => "submitForm('signinform')", :class=>"btn btn-primary") do %>
        Continue
    <% end %>
<% end %>
<% content_for :below_button do %>
        <%= link_to("Sign in", user_session_url)%> | <%= link_to("Cancel", "#", :onclick => "history.back(1)")%> 
<% end %>
<%= render(:template => 'shared/splash_with_question') %>